<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Favorites</title>
        <% include ../partials/head %> 
    </head>
    <body>
    <% include ../partials/nav %> 
    <% include ../partials/jumbotron %> 
    <div id="container" class="fluid">
    <main role="main">
    <% if (errors.length > 0) { %>
        <div class ="alert alert-danger alert-dismissible"> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
        <%= errors %>
        </div> 
    <% } %>
    <div class="container">
    <% if (user.favorites.length > 0) { %>
    <h1 class="admin">My Favorites</h1>
    <hr/>
    <% user.favorites.forEach((favorite) => { %>
        <form method="post" action="/api/books/deletebook/<%= favorite %>?_method=DELETE">
            <div class="card-body admin">
                <h5 class="card-title" style="width: 40em;"><a href="/api/books/single-book/<%= favorite %>"><%= favorite %></a>
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </h5>
                </div>
            </form>
    <% }) %>
    <% } else {%>
        <h1 class="admin">You currently do not have any favorite books.</h1>
    <% } %>
    </div>
    </main>
</div>
<% include ../partials/footer %> 
<% include ../partials/scripts %> 
</body>
</html>